@model List<WebApplication1.Models.User>

<!DOCTYPE html>
<html>
<head>
    <title>Account Details</title>
    <style>

        h1 {
            font-size: 50px;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: black; /* Light gray background */
            color: #343a40; /* Dark gray text */
            margin: 20px;
            color: #B71C1C; /* Dark red */
        }

        .profile-card {
            border: 1px solid #B71C1C; /* Dark red */
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center; /* Align items vertically in the center */
        }

        .profile-image {
            border-radius: 50%;
            margin-right: 150px;
            width:500px;
            height:500px;
        }

        h2 {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: 40px;
            color: #B71C1C; /* Dark red */
        }

        .details-container {
            flex-grow: 1;
            padding-left: 20px;
        }

        .details-label {
            font-weight: bold;
            color: #D32F2F; /* Dark red */
        }

        .details-value {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <h1>Account Details</h1>
        <!-- Placeholder image -->
        <img src="~/images/profile.png" alt="Profile Image" class="profile-card">

