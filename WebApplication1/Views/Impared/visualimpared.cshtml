@{
    ViewData["Title"] = "Option";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            font-family: 'Comfortaa', sans-serif;
            margin: 0;
            padding: 0;
        }

        .background-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Set a negative z-index to position it behind the content */
            background-color: #e5e5f7;
            opacity: 0.1;
            background: linear-gradient(135deg, #38394f55 25%, transparent 25%) -17px 0/ 34px 34px, linear-gradient(225deg, #38394f 25%, transparent 25%) -17px 0/ 34px 34px, linear-gradient(315deg, #38394f55 25%, transparent 25%) 0px 0/ 34px 34px, linear-gradient(45deg, #38394f 25%, #e5e5f7 25%) 0px 0/ 34px 34px;
        }

        .button-containerers {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 8%;
            flex-direction: row;
            text-align: center;
            opacity: 0; /* Set initial opacity to 0 for the fade-in effect */
        }

        .wdbuttonss {
            display: inline-block;
            text-decoration: none;
            background-color: #900d09;
            color: white;
            padding: 5% 7%;
            border-radius: 5px;
            margin: 0% 5% 1% 5%;
            font-size: 150%;
            transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1), transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .wdbuttonss:hover {
                background-color: #bc544b; /* Change the background color on hover */
                color: white;
                transform: scale(1.1); /* Add a scaling effect on hover */
            }

        .welcomezz {
            margin: 0;
            font-size: 24px;
            text-align: center;
            opacity: 0; /* Set initial opacity to 0 for the fade-in effect */
        }
    </style>
</head>
<body>
    <div class="background-container"></div>
    <div class="mains">
        <div class="welcomezz">
            Welcome: @TempData["LoggedInUser"]
            <br />
            Do you want the voice assistance?
        </div>
        <div class="button-containerers">
            <a asp-area="" asp-controller="Impared" asp-action="Home" class="wdbuttonss">Yes</a>
            <a asp-area="" asp-controller="Home" asp-action="Home" class="wdbuttonss">No</a>
        </div>
    </div>

    <script>
        // JavaScript for fade-in effect
        document.addEventListener("DOMContentLoaded", function () {
            fadeIn(document.querySelector(".welcomezz"));
            fadeIn(document.querySelector(".button-containerers"));
        });

        function fadeIn(element) {
            var opacity = 0;
            var interval = setInterval(function () {
                if (opacity < 1) {
                    opacity += 0.05; // Adjust the increment value for a smoother fade-in
                    element.style.opacity = opacity;
                } else {
                    clearInterval(interval);
                }
            }, 50); // Adjust the interval for a smoother fade-in
        }
    </script>
</body>
</html>