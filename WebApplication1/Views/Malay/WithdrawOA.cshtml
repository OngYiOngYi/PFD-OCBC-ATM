@model WebApplication1.Models.User

@{
	ViewData["Title"] = "WithdrawOA";
}

<!DOCTYPE html>
<html>
<head>
	<title>
		Deposit
	</title>
    <style>
        body {
            font-family: 'Comfortaa', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .mains {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 60vh;
            margin-top: 5%;
            opacity: 0; /* Set initial opacity to 0 for the fade-in effect */
            transition: opacity 0.5s ease-in-out; /* Added a transition for fade-in effect */
        }

        .Deposit, .DepositText {
            font-family: 'Comfortaa', sans-serif;
        }

        .input-group {
            text-align: center;
            margin-top: 20px;
        }

        .input-group input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 200px;
        }

        .input-group button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .input-group button:hover {
            background-color: #0056b3;
        }

        .success-message {
            color: green;
        }

        .error-message {
            color: red;
        }

        #dotMessage, #depositmessage {
            display: none;
        }

        button[type="submit"] {
            padding: 10px 20px;
            margin: 10px;
            border: 2px solid #900d09;
            background-color: #900d09;
            color: #fff;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1), transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        button[type="submit"]:hover {
            background-color: #bc544b; /* Change the background color on hover */
            color: white;
            transform: scale(1.1); /* Add a scaling effect on hover */
        }


        #depositAmount{
            background-color:white;
        }
    </style>
	<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@600&family=Merriweather:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="toplayers">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="WithdrawOA">Home</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Chinese" asp-action="WithdrawOA">Chinese</a>
    </div>
	<div class="mains">
		<h1 class="Deposit">Keluarkan Wang</h1>
		<div class="DepositText">
            Sila masukkan amaun untuk dikeluarkan...
		</div>

		<div>
			<div class="input-group">
				<form id="depositForm" asp-controller="Malay" asp-action="WithdrawAmountOA" method="post" onsubmit="return submitForm()">
					<input asp-for="Amount" id="depositAmount" type="number" name="Amount" placeholder="Enter amount" class="form-control-plaintext" required>
					<button type="submit" onclick="simulateDeposit()">Submit</button>
				</form>
			</div>
		</div>
		<div id="dotMessage" style="display: none;"></div>
		<div id="depositmessage" style="display: none;"></div>
	</div>

	<script>
        document.addEventListener("DOMContentLoaded", function () {
            fadeIn(document.querySelector(".mains"));
        });

        function fadeIn(element) {
            var opacity = 0;
            var interval = setInterval(function () {
                if (opacity < 1) {
                    opacity += 0.05;
                    element.style.opacity = opacity;
                } else {
                    clearInterval(interval);
                }
            }, 10);
        }

		// Function to simulate the deposit process with dot animation and success message
		function simulateDeposit() {
			// Call the function to show the dot message with animated dots
			showDotMessage();

			// Simulate a delay for 3 seconds before showing the success message
			setTimeout(function () {
				// Call the function to show the success message
				showMessage("Pengeluaran Berjaya", 3000);
			}, 3000);
		}

		// Function to display a message for a specified duration
		function showMessage(message, duration) {
			var messageDiv = document.getElementById("depositmessage");
			messageDiv.innerHTML = message;

			// Show the message div
			messageDiv.style.display = "block";

			// Delay for the specified duration
			setTimeout(function () {
				// Hide the message div after the delay
				messageDiv.style.display = "none";
			}, duration);
		}

		// Function to display the dot message with animated dots
		function showDotMessage() {
			var dotMessageDiv = document.getElementById("dotMessage");
			dotMessageDiv.style.display = "block";

			var dots = 0;
			var dotAnimation = setInterval(function () {
                dotMessageDiv.innerHTML = "Kami sedang menyediakan wang tunai anda" + ".".repeat(dots);
				dots = (dots + 1) % 3; // 4 is the number of dots, adjust as needed
			}, 200); // Adjust the interval as needed

			// Delay for 3 seconds
			setTimeout(function () {
				clearInterval(dotAnimation); // Stop the dot animation
				dotMessageDiv.style.display = "none"; // Hide the dot message
			}, 3000);
		}
	</script>
</body>
</html>