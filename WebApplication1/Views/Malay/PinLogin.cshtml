@model WebApplication1.Models.User
@{
	ViewData["Title"] = "Login";
}

<html>
<header>
	<title>Login</title>
	<style>
		.login-container {
			background-color: #fff;
			padding: 20px;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
			font-family: 'Comfortaa', sans-serif;
			width: 40%;
			text-align: center;
			display:flex;
			justify-content:center;
			align-items:center;
			margin-left:30%;
		}

		.login-form {
			display: flex;
			flex-direction: column;
			max-width: 250px;
		}

		label {
			margin-bottom: 6px;
		}

		input {
			padding: 8px;
			margin-bottom: 10px;
			border-radius: 4px;
			border: 1px solid #ccc;
		}

		button {
			padding: 8px 12px;
			border: none;
			border-radius: 4px;
			background-color: #3498db;
			color: white;
			cursor: pointer;
		}

			button:hover {
				background-color: #2980b9;
			}

		#message {
			margin-top: 10px;
			color: #c0392b;
			font-style: italic;
			font-size: 14px;
		}
		.spacerers{
			margin-top: 10%;
		}
	</style>
</header>

<body>
	<div class="login-container">
		<div class="container mt-5">
			<h2>Login</h2>
			@if (ViewBag.ErrorMessage != null)
			{
				<p class="text-danger">@ViewBag.ErrorMessage</p>
			}
			<span>
				Sila masukkan <span style="color:red">KAD</span> anda dan masukkan pin anda<span>
			<br />
			<form asp-action="Login" asp-controller="Malay" class="spacerers" method="post">
				<div class="form-group">
							<label asp-for="Password">Masukkan pin anda</label>
					<input asp-for="Password" type="password" class="form-control" required>
				</div>
				<button type="submit" class="btn btn-primary">Login</button>
			</form>
		</div>
	</div>
</body>
</html>
